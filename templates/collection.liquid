<div id="verticalMenu">


<ul id="navShopCat">
  	{% for collection in collections %}
           {% if collection.show? %}
                  <!--div class="navShopWrap {% if collection.current? %}navShopItemCurrent{% endif %}"><div class="navShopItemWrap"><div class="navShopItemWrapContent"-->
                    <li class="level1"><a href="{{ collection.url }}"{% if collection.current? %} class="active"{% endif %}>{{ collection.title }}</a></li>
                    {% if collection.subcollections.size > 0 %}
                      <ul>
                        {% for subcollection in collection.subcollections %}
                           <li class="level2{% if subcollection.current? %} active{% endif %}">
                            <a href="{{ subcollection.url }}"{% if subcollection.current? %} class="active"{% endif %}>{{ subcollection.title }}</a>
                            {% if subcollection.subcollections.size > 0 and subcollection.current? %}
                              <ul>
                                {% for subcollection in subcollection.subcollections %}
                                   <li class="level3{% if subcollection.current? %} active{% endif %}">
                                    <a href="{{ subcollection.url }}"{% if subcollection.current? %} class="active"{% endif %}>{{ subcollection.title }}</a>
                                   </li>
                                {% endfor %}
                              </ul>
                            {% endif %}
                           </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  <!--/div></div></div-->
                {% endif %}
  			{% endfor %}
  </ul>

  <div id="seotext">
    {{ collection.description }}
  </div>

</div>
<div id="shopContent">
  <h1>{{ collection.title }}</h1>



  {% if products.size > 0 %}
    {% paginate products by 15 %}

    <div class="paginationList clearfix order-form">
      <form id="options" action="{{collection.url}}" method="get" class="variants">
        {% if language.not_default? %} <input type="hidden" name="lang" value="{{ language.locale }}"> {% endif %}
        <table style="float:left">
            <tr>
                {% for option in collection.options %}
                {% if option.values.size > 1 %}
                   {% if option.title == 'Размер' %}
                <td>
                  <span style="font-size: 1.1em; color: #8F7F8E;">Выбрать размер: </span>
                    <select name="options[{{option.id}}][]" class="options" style="margin-top: -2px;" >
                        <option value=""></option>
                        {% for value in option.values %}
                        <option value="{{value.id}}" {% if value.selected %}selected{% endif %}>{{value.title}}</option>
                        {% endfor %}
                    </select>
                </td>
                {% else %}
                {% endif %}
                {% endif %}
                {% endfor %}
            </tr>
        </table>


        <label for="order">Сортировать по:</label>
            <select name="order" id="order" class="params options">
              {{ "" | select_option: order, "" }}
              {{ "price"  | select_option: order, "По возрастанию цены" }}
              {{ "descending_price"  | select_option: order, "По убыванию цены" }}
              {{ "title"  | select_option: order, "Названию" }}
            </select>

           <label for="page_size">На странице по:</label>
            <select name="page_size" id="page_size" class="params options">
              {{ "18" | select_option: page_size, "18 товаров" }}
              {{ "36"  | select_option: page_size, "36 товара" }}
              {{ "72"  | select_option: page_size, "72 товара" }}
            </select>
      </form>

        {% if paginate.pages > 1 %}
        <div class="pagination">
            <ul class="clearfix">
              {% if paginate.previous %}
              <li class="pagPrev">{{ '&laquo;' | link_to: paginate.previous.url}}</li>
              {% endif %}
                  {% for part in paginate.parts %}
                    <li {% if forloop.last? and paginate.previous == nil %}class="last"{% endif %}>
                        {% if part.is_link %}
                            {{ part.title | link_to: part.url }}
                        {% else %}
                            <strong>{{ part.title }}</strong>
                        {% endif %}
                      </li>
                  {% endfor %}
                  {% if paginate.next %}
                <li class="pagNext last">{{ '&raquo;' | link_to: paginate.next.url }}</li>
              {% endif %}
              </ul>
        </div>
        {% endif %}
    </div>

    <div id="productList">
      <div class="productListWrap clearfix">
          {% for product in products %}{% include 'product_view' %}{% endfor %}
      </div>
    </div>

    {% if paginate.pages > 1 %}
      <div class="paginationList clearfix">
           <div class="pagination">
             <ul class="clearfix">
                <!-- <li class="pagPrev"><a href="http://www.atlantic.pl/kategoria/2-damska.html?page=4" title="poprzednia">poprzednia</a></li> -->
                {% for part in paginate.parts %}
                  <li {% if forloop.last %}class="last"{% endif %}>
                      {% if part.is_link %}
                          {{ part.title | link_to: part.url }}
                      {% else %}
                          <strong>{{ part.title }}</strong>
                      {% endif %}
                    </li>
                {% endfor %}
              <!-- <li class="pagNext last"><a title="następna" href="http://www.atlantic.pl/kategoria/2-damska.html?page=2">następna »</a></li> -->
                </ul>
           </div>
      </div>
      {% endif %}

    {% endpaginate %}
