 <script type="text/javascript" src="{{ 'jquery.rating.pack.js' | asset_url }}"></script>
<link rel="stylesheet" type="text/css" href="{{ 'jquery.rating.css' | asset_url }}">
<div class="review-wrapper cf">
  <div class="tab-content">
    {% if account.reviews_enabled? %}
    <div class="item-review" id="tab3">  {% if product.reviews == empty %}
      <p class="box"> <em> Пока нет отзывов</em> </p>
      {% else %}
      <h3>Отзывы о товаре</h3>
      <ul class="reviews">
        {% for review in product.reviews %}
        <li class="{% if forloop.last %}last{% endif %}">
          <div class="review_details">
            Добавил(а) {{ review.author }} , {{ review.created_at | date: "%d.%m.%Y %H:%M" }}
          </div>
          <div class="reviews">
            {{ review.content | newline_to_br }}
          </div>
          {% if review.rating %}
          <div class="review_rating">
           Оценка: <span>{{ review.rating }}</span> 
          </div>  
          {% endif %}
        </li>
        {% endfor %}
      </ul>
      {% endif %}
      
      <!-- форма отзыва -->
      <div id="review_form">
        <!-- Review Form -->
        {% form review %}
        <h3>Оставить отзыв</h3>
        {% if form.posted_successfully? %}
        {% if account.reviews_moderated? %}
        <div class="notice">
          Отзыв успешно отправлен.<br />
          Он будет промодерирован владельцем магазина перед публикацией.
        </div>
        {% else %}
        <div class="notice"> Отзыв добавлен.</div>
        {% endif %}
        {% endif %}
        
        <div style="clear: both;"> </div>
        {% if review.errors.size > 0 %}
        <div class="notice error"> Не все поля заполнены правильно!</div>
        {% endif %}
        
        <div id="namemail_review">
        <p><strong><label for="review_author" class="{% if review.errors contains 'author' %}error{% endif %}">Ваше Имя: </label></strong>
         <input type="text" id="review_author" name="review[author]" value="{{review.author}}" class="txt {% if review.errors contains 'author' %}input-error{% endif %}" />
        </p>
        
        <p><strong><label for="review_email" class="{% if review.errors contains 'author' %}error{% endif %}"> E-mail</label></strong>
        <input type="text" id="review_email" name="review[email]" value="{{review.email}}" class="txt {% if review.errors contains 'email' %}input-error{% endif %}" /></p>
        </div>
        
        <div id="otzyv_review">
        <strong><label for="review_body" class="{% if review.errors contains 'author' %}error{% endif %}"> Отзыв</label></strong>
        <p>  <textarea id="review_body" name="review[content]" cols="32" rows="4" class="{% if review.errors contains 'content' %}input-error{% endif %}"> {{review.content}}</textarea> </p>
        </div>
        
        <div>
        <div class="rating_wrapper mystars cf" id="ocenka_review">
          <p><label for="rating" class="rating_label fl"> Оцените товар:</label></p>
          {% for i in (1..5) %}
          <input name='review[rating]' type='radio' class='star' value='{{i}}'/> {{i}} &nbsp;
          {% endfor %}
          <div style="clear:both;"></div>
        </div>
        
        <div id="captcha_review">
          {% if review.captcha_enabled? %}
        <div id="captcha">
          <div id="captcha_challenge">
            {{ review | captcha_challenge }}
          </div>
          <input type="text" size="6" name="review[captcha_solution]" id="review_captcha_solution" class="txt textfield {% if review.errors contains 'captcha_solution' %}input-error{% endif %}">
          <br/><small>Наберите текст, изображённый на картинке</small>
        </div>
        {% endif %}
          </div>
          <div class="cb"></div>
        </div>
        <p id="vsepoluya_review" class="small"> Все поля обязательны к заполнению<br />
        <input type="submit" class="buy_button button" value="Отправить отзыв" /><p>
        
        
        {% if account.reviews_moderated? %}
        <div id="review_moderation_warning"> Перед публикацией отзывы проходят модерацию</div>
        {% endif %}
        {% endform %}
      </div>
      
    </div>
    {% endif %}
  </div>
</div> 